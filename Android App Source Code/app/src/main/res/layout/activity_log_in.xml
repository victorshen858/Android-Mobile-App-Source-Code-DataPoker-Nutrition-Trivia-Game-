<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blend_background"
    tools:context="gmu.cs.cs477.datapoker.LogInActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="12"
        android:id="@+id/usernameTextField"
        android:hint="Username"
        android:layout_above="@+id/passwordTextField"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="12"
        android:id="@+id/passwordTextField"
        android:hint="Password"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/logInButton"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <Button
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        style="@style/CustomStyleButton"
        android:id="@+id/logInButton"
        android:layout_above="@+id/signUpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <Button
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/signUpButton"
        style="@style/CustomStyleButtonVariation"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/buttonSkip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/passwordTextField"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:layout_above="@+id/passwordTextField"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Data Poker!"
        android:id="@+id/textView8"
        android:textSize="21sp"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/data_poker_logo"
        android:adjustViewBounds="true"
        android:layout_above="@+id/usernameTextField"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Created by Victor Shen, Kai Johnson, and Chris Lee"
        android:textColor="#000000"
        android:id="@+id/textView9"
        android:textSize ="15sp"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Without Saving Score"
        android:id="@+id/buttonSkip"
        style="@style/SkipButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/signUpButton"
        android:layout_alignStart="@+id/signUpButton"
        android:layout_alignRight="@+id/signUpButton"
        android:layout_alignEnd="@+id/signUpButton" />

</RelativeLayout>
